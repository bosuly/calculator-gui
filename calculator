        private void enter(String v){
         String num=res.getText()+v;
         res.setText(num);
        }
    
    private void fiveActionPerformed(java.awt.event.ActionEvent evt) {                                     
       enter("5");
    }                                    

    private void fourActionPerformed(java.awt.event.ActionEvent evt) {                                     
        enter("4");
    }                                    

    private void divideActionPerformed(java.awt.event.ActionEvent evt) {                                       
      f=Double.parseDouble(res.getText());
      res.setText("");
      k="/";
    }                                      

    private void timesActionPerformed(java.awt.event.ActionEvent evt) {                                      
       f=Double.parseDouble(res.getText());
      res.setText("");
      k="*";
    }                                     

    private void threeActionPerformed(java.awt.event.ActionEvent evt) {                                      
    enter("3");
    }                                     

    private void sixActionPerformed(java.awt.event.ActionEvent evt) {                                    
    enter("6");
    }                                   

    private void pointActionPerformed(java.awt.event.ActionEvent evt) {                                      
       if(!res.getText().contains(".")){
           res.setText(res.getText()+ point.getText());
       }
    }                                     

    private void twoActionPerformed(java.awt.event.ActionEvent evt) {                                    
       enter("2");
    }                                   

    private void eightActionPerformed(java.awt.event.ActionEvent evt) {                                      
      enter("8");
    }                                     

    private void backActionPerformed(java.awt.event.ActionEvent evt) {                                     
    String b=null;
    if (res.getText().length()>0){
    StringBuilder n=new StringBuilder(res.getText());
    n.deleteCharAt(res.getText().length()-1);
    b=n.toString();
    res.setText(b);
    }
    }                                    

    private void zeroActionPerformed(java.awt.event.ActionEvent evt) {                                     
   enter("0"); 
    }                                    

    private void oneActionPerformed(java.awt.event.ActionEvent evt) {                                    
       enter("1");
    }                                   

    private void sevenActionPerformed(java.awt.event.ActionEvent evt) {                                      
        enter("7");
    }                                     

    private void nineActionPerformed(java.awt.event.ActionEvent evt) {                                     
      enter("9");
    }                                    

    private void minusActionPerformed(java.awt.event.ActionEvent evt) {                                      
   f=Double.parseDouble(res.getText());
      res.setText("");
      k="-";
    }                                     

    private void sumActionPerformed(java.awt.event.ActionEvent evt) {                                    
     f=Double.parseDouble(res.getText());
      res.setText("");
      k="+";
    }                                   

    private void ceActionPerformed(java.awt.event.ActionEvent evt) {                                   
     res.setText("");
     String b=String.valueOf(f);
      String c=String.valueOf(s);
      b="";
      c="";
    }                                  

    private void signActionPerformed(java.awt.event.ActionEvent evt) {                                     
      double p=Double.parseDouble(String.valueOf(res.getText()));
      p=p*(-1);
      res.setText(String.valueOf(p));
    }                                    

    private void equalActionPerformed(java.awt.event.ActionEvent evt) {                                      
      s=Double.parseDouble(res.getText());
      if(k=="+"){
      r=f+s;
      res.setText(String.valueOf(r));
      }else if(k=="-"){
           r=f-s;
      res.setText(String.valueOf(r));
      }else if(k=="x"){
           r=f*s;
      res.setText(String.valueOf(r));
      }else if(k=="/"){
           r=f/s;
      res.setText(String.valueOf(r));
      }
    }                                     

